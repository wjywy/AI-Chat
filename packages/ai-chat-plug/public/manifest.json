{
  "manifest_version": 3,
  "name": "AI Chat",
  "version": "1.0.0",
  "description": "智能AI对话助手浏览器插件",
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Chat"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }]
} 